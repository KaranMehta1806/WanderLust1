<% layout("/layouts/boilerplate")%>
<body>
    <!-- <div class="row mt-2"> -->
    <!-- <h1>All Listings</h1> -->
     <style>
    @media only screen and (max-width:1388px) {
      .tax-toggle {

    margin-left: 1rem;

  }
    }

    @media only screen and (max-width:1200px) {
        .extra-filter{
          display: none;
        }
        .tax-toggle {
          /* display: flex; */
          margin-left: auto;
}
    }

    @media only screen and (max-width:767px) {
      .filter{
          display: none;
        }
 
        .tax-toggle {
          margin:1rem 0 1rem auto;
          height: 1rem;
}
      .switch-label{
        font-size: small;
      }

     
    }

     </style>
     <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter extra-filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label switch-label" for="flexSwitchCheckDefault">Default total after Taxes</label>
      </div>
     </div>
     
     </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let listings of allListings){%>
        <a href="/listings/<%=listings._id%>" class="listing-link">
    <div class="card col listing-card" >
        <img src="<%=listings.image.url%>" class="card-img-top"
         alt="listing_image"
          style="height: 20rem;"
          />
        <div class="card-img-overlay">
            
        </div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listings.title%></b><br>
            &#8377;<%=listings.price.toLocaleString("en-IN")%> /night    
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
      <%}%>
    </div>
  <!-- </div> -->
</body>



